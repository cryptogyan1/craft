{
  "manifest_version": 3,
  "name": "Craft World ID & Token Extractor",
  "version": "1.0",
  "description": "Extracts mineId, factoryId, areaId, and JWT tokens from Craft World game.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.craft-world.gg/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
